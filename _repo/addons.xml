<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.meta" name="Meta" version="1.1.6.0" provider-name="MetaTeam">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.futures" version="2.2.0"/>
  </requires>

  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>

  <extension point="xbmc.service" library="service.py" start="[login|startup]">
  </extension>

  <extension point="kodi.context.item" library="context_playable.py">
    <provides>executable</provides>
      <item>
        <label>$ADDON[plugin.video.meta 30602]</label>
        <visible>!System.HasAddon(context.meta) + [StringCompare(ListItem.dbtype,movie) | StringCompare(ListItem.dbtype,episode)] + SubString(ListItem.FileNameAndPath, plugin.video.meta)</visible>
      </item>
  </extension>

  <extension point="kodi.context.item" library="context_tvshow.py">
    <provides>executable</provides>
      <item>
        <label>$ADDON[plugin.video.meta 30622]</label>
        <visible>StringCompare(ListItem.dbtype,tvshow) + SubString(ListItem.Path, plugin.video.meta)</visible>
      </item>
  </extension>

  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language></language>
    <summary>TMDB and TVDB media listing</summary>
    <description>Browse TMDB and TVDB media</description>
    <supportedcontent>
      <content>movies</content>
      <content>tvshows</content>
      <content>episodes</content>
    </supportedcontent>
  </extension>
</addon>

<addon id="plugin.video.telequebec"
       name="Télé-Québec"
       version="3.1.0"
       provider-name="CB"
>
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="xbmc.json" version="6.0.0"/>
        <import addon="xbmc.addon" version="12.0.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Plugin for the Télé-Québec.TV site</summary>
	    <summary lang="fr">Addiciel vidéo donnant accès à la zone vidéo de TéléQuébec.TV</summary>
        <description>Play all videos from Télé-Québec.TV site. Most videos can only be accessed in Canada.</description>
	    <description lang="fr">Cet addiciel permet d'accèder à la zone vidéo de TéléQuébec.TV.  La plupart des vidéos ne sont accessibles qu'au Canada.</description>
    </extension>
</addon>

    <addon id="repository.GOAT4Real" name="GOAT4Real Repository" version="0.2.0" provider-name="GOAT4Real">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="GOAT4Real Repository">
            <info compressed="false">https://raw.githubusercontent.com/GOAT4Real/GOAT4Real-Repo/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/GOAT4Real/GOAT4Real-Repo/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/GOAT4Real/GOAT4Real-Repo/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>GOAT4Real Repo</summary>
            <description>Modified Addons</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
